{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-sm">
    <form action="/animals" method="POST" >
      <fieldset>
        <legend>Create New Animal</legend>
        <label class="form-label">Name:</label>
        <input type="text" class="form-control" name="name" placeholder="What kind of animal is this?">
        <label class="form-label">Color:</label>
        <input type="color" class="form-control" name="color" placeholder="What color is this animal?">
        <label class="form-label">Age:</label>
        <input type="number" class="form-control" name="age" placeholder="How old is this animal?">
      </fieldset>
      <input type="submit" class="btn btn-success mt-3" value="Create New Animal">
    </form>
  </div>
{% endblock %}